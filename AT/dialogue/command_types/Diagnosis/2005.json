{
  "type": "db_query",
  "params":
  [
    { "name": "anomaly_id", "type": "anomaly_id", "options": "", "from_context": false, "mandatory": true }
  ],
  "objective": "describe the components related to each anomaly",
  "query":
  {
    "always": "session.query(models.ECLSSRelatedComponents).join(models.symptom_to_component).join(models.ECLSSAnomalies).filter(models.ECLSSAnomalies.id == ${anomaly_id})",
    "opt": [],
    "end": "",
    "results": [
      {
        "result_type": "list",
        "result_fields": {
          "component": "row.description"
        }
      }
    ]
  },
  "voice_response": [
    {
      "type": "list",
      "begin": "The following components are related to anomaly ${anomaly_id}: ",
      "repeat": "${component}",
      "end": "."
    }
  ],
  "visual_response": [
    {
      "type": "text",
      "from": "list",
      "begin": "The following component(s) are related to anomaly ${anomaly_id}: ",
      "repeat": "${component}",
      "end": "."
    }
  ]
}
