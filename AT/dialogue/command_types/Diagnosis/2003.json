{
  "type": "db_query",
  "params":
  [
    { "name": "anomaly_id", "type": "anomaly_id", "options": "", "from_context": false, "mandatory": true }
  ],
  "query":
  {
    "always": "session.query(models.ECLSSActions).join(models.symptom_to_action).join(models.ECLSSAnomalies).filter(models.ECLSSAnomalies.id == ${anomaly_id})",
    "opt": [],
    "end": "",
    "results": [
      {
        "result_type": "list",
        "result_fields": {
          "action": "row.description"
        }
      }
    ]
  },
  "voice_response": [
    {
      "type": "list",
      "begin": "The following actions may help resolve anomaly ${anomaly_id}: ",
      "repeat": "${action}",
      "end": "."
    }
  ],
  "visual_response": [
    {
      "type": "text",
      "from": "list",
      "begin": "The following action(s) may help resolve anomaly ${anomaly_id}: ",
      "repeat": "${action}",
      "end": "."
    }
  ]
}
