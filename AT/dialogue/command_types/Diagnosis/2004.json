{
  "type": "db_query",
  "params":
  [
    { "name": "anomaly_id", "type": "anomaly_id", "options": "", "from_context": false, "mandatory": true }
  ],
  "objective": "describe the risks associated with each anomaly",
  "query":
  {
    "always": "session.query(models.ECLSSRisk).join(models.symptom_to_risk).join(models.ECLSSAnomalies).filter(models.ECLSSAnomalies.id == ${anomaly_id})",
    "opt": [],
    "end": "",
    "results": [
      {
        "result_type": "list",
        "result_fields": {
          "risk": "row.description"
        }
      }
    ]
  },
  "voice_response": [
    {
      "type": "list",
      "begin": "The potential risks of anomaly ${anomaly_id} are: ",
      "repeat": "${risk}",
      "end": "."
    }
  ],
  "visual_response": [
    {
      "type": "text",
      "from": "list",
      "begin": "The potential risks of anomaly ${anomaly_id} are: ",
      "repeat": "${risk}",
      "end": "."
    }
  ]
}
