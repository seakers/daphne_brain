{
  "type": "run_function",
  "params": [
    {
      "name": "",
      "type": "",
      "options": "",
      "from_context": true,
      "context_path": ["screen"],
      "mandatory": true
    }
  ],
  "objective": "Repeats the last/current step of a certain procedure from context",
  "function": {
    "run_template": "dialogue_functions.get_current_step_from_context(context)",
    "results": [
      {
        "result_type": "single",
        "result_fields": {
          "procedure_step_number": "command_results[0]['label']",
          "procedure_step_action": "command_results[0]['action']"
        }
      }
    ]
  },
  "voice_response": [
    {
      "type": "single",
      "template": "Repeating ${procedure_step_number}. ${procedure_step_action}"
    }
  ],
  "visual_response": [
    {
      "type": "text",
      "from": "single",
      "template": "${procedure_step_number}</b>: ${procedure_step_action}"
    }
  ]
}